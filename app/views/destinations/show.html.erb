<div  class="row">
  <div class="col col-4">
    <h1> <%= @destination.name %> </h1>
  </div>
  <div id="todo_form" class="col col-3">
  </div>
  <div class="col col-1">
    <%= link_to 'Add a ToDo', new_destination_todo_path(@destination),
      class: "wbl-link",
      remote: true
    %>
  </div>
</div>
<div   class="row map">
  <div id="map-canvas" class="col col-8">
  </div>
</div>
<div class="row todos">
  <%= render 'todos', todos: @destination.todos.all %>
</div>




